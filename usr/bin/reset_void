sudo sh -c 'xbps-query -l | cut -d" " -f2 | xargs xbps-pkgdb -m manual'
sudo sh -c 'xbps-query -m | grep -v \
    -e vim\
    -e base-system\
    -e grub\
    -e NetworkManager\
    -e linux\
    -e linux-firmware\
    -e zsh\
    -e os-prober\
    -e efibootmgr\
    -e grub-x86_64-efi\
    -e git\
    | xargs xbps-pkgdb -m auto'
sudo xbps-remove -o

